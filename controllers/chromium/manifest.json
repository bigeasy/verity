{ "name": "Verity Controller"
, "version": "1.0"
, "description": "Semi-automation controller for a Google Chrome participant in a Verity Grid."
, "permissions":
  [ "http://*/"
  , "https://*/"
  , "tabs"
  , "webNavigation"
  ]
, "content_scripts":
  [
    { "matches": [ "http://*/*", "https://*/*" ]
    , "js": [ "content.js" ]
    }
  ]
, "background_page": "background.html"
}
